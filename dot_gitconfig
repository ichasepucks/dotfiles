[user]
	name = Tom O'Connor
	email = toconnor@adobe.com
[color]
	ui = auto
[push]
	default = upstream
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	permission-reset = !git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply
[credential]
	helper = osxkeychain
[core]
	excludesfile = /Users/toconnor/Development/.gitignore
	autocrlf = input
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pull]
	rebase = false
[init]
	defaultBranch = main
[submodule]
	recurse = true
